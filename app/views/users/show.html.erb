<p><%= flash[:notice] %></p>



<div class="container"style="width:850px;">
  <div class="row">
    <div class = "col-xs-3">

<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg", class: "img-circle pull-left profile-img" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
       <tr>
        <th>gender</th>
        <th><%= @user.gender %></th>
      </tr>
      <th>age</th>
        <th><%= @user.age %></th>
      </tr>
      <tr>
        <th>prefecture</th>
        <th><%= @user.prefecture %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to "follows: #{@user.follower.count}", follows_path(@user.id) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to "followers: #{@user.followered.count}", followers_path(@user.id) %></th>
      </tr>
      <tr>
        <th>
          <% unless @user == current_user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', relationship_path(@user.id), method: :DELETE, class:"btn btn-warning" %>
            <% else %>
              <%= link_to 'フォローする', relationships_path(@user.id), method: :POST, class:"btn btn-warning" %>
            <% end %>
            <% end %>
        </th>
      </tr>
    </tbody>
  </table>

    <% if @user.id == current_user.id %>
      <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% else %>
      <%=  link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% end %>



<h2>New book</h2>

  <%= form_for @book, url: books_path do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Body</h4>
  <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
   </div>



<div class = "col-xs-9">
<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Oponion</th>
      <th></th>
    </tr>
  </thead>

<tbody>
  <% @user.books.each do |a| %>
    <tr>
      <td>
        <%= link_to user_path(a.user.id) do %>
          <%= attachment_image_tag a.user, :profile_image,format: 'jpeg', fallback: "no_image.jpg",size: "50x50"  %>
        <% end %>
      </td>
      <td><%= link_to a.title, book_path(a.id) %></td>

      <td><%= a.body %>
        <ul class="inline-meta">
          <li style="list-style: none; float:right;">
            <span class="glyphicon glyphicon-comment" aria-hidden="true" style="color:#a9a9a9;"></span>
              <%= link_to "#{a.post_comments.count}", book_path(a.id) %>
          </li>
        </ul>
      </td>
  <% end %>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>