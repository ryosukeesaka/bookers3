<body>
<div class="body">
<div class="container">
<p id="notice"></p>
<h2 class="form-header-title">User info</h2>
    <div class="form-body">
    <%= form_for(@user) do |f| %>
    <div class="field">
    <label for="user_name">Name</label>
   <%= f.text_field :name %>
  </div>

    <div class="field">
    <label for="user_image">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %></div>

    <div class="field">
        <label for="introduction">Introduction</label>
   <%= f.text_area :introduction %>
  </div>

<div class="actions">
    <%= f.submit "Update User" %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @user.errors.count %> errors.messages.not_saved</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  </div>
</div>
<% end %>
</div>
</div>
</div>
</body>
