<!DOCTYPE html>
    <html>
        <head>
            <title>Bookers3</title>
                <%= csrf_meta_tags %>
                <%= csp_meta_tag %>
                <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        </head>



  <header class="navbar" style="background-color:#dcdcdc;">
    <div class="container">
      <span style="color:#808080; padding-top:50px; font-size:40px;">Bookers</span>


         <nav>
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style="color:#c0c0c0;">
              <% if user_signed_in? %>
                <li class="">
                  <span class="glyphicon glyphicon-home" aria-hidden="true">
                    <%= link_to 'Home', user_path(current_user.id) %>
                  </span>
                </li>
                <li class="">
                  <span class="glyphicon glyphicon-user" aria-hidden="true">
                    <%= link_to "Users", users_path  %>
                  </span>
                </li>
                <li class="">
                    <span class="glyphicon glyphicon-book" aria-hidden="true">
                        <%= link_to "Books", books_path  %>
                    </span>
                </li>
                <li class="">
                  <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                    <%= link_to "logout", destroy_user_session_path, method: :delete %>
                  </span>
                </li>
                <il><br>
                  <%= form_tag(search_path, :method => 'get') do %>
                  <%= select_tag(:option, options_for_select([["user", "1"],["book","2"]]))%> 
                  <%= select_tag(:choice, options_for_select([["あいまい検索", "1" ],["後方一致検索", "2" ],["前方一致検索", "3" ],["完全一致検索", "4" ]])) %>

                  <%= text_field_tag :search %>
                  <%= submit_tag 'Search', :name => nil %>
                  <% end %>
                </il>

              <% else %>
                <li class="">
                  <span class="glyphicon glyphicon-home" aria-hidden="true">
                    <%= link_to 'Home', root_path %>
                  </span>
                  <span class="glyphicon glyphicon-home" aria-hidden="true">
                    <%= link_to 'About', home_about_path %>
                  </span>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true">
                    <%= link_to "Sign up", new_user_registration_path %>
                  </span>
                </li>
                <li class="">
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true">
                    <%= link_to "login", new_user_session_path %>
                  </span>
                </li>
              <% end %>
            </ul>
　　　　　　</nav>
　　　　　</div>
　　　　</header>

<div class="container">
  <div class="row">
　　　<%= yield %>
<body>
        <script src="jquery.min.js"></script>
        <script src="create.js.erb, destroy.js.erb"></script>
    </body>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</html>

