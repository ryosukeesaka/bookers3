
  <div class ="container">

    <div class = "row">
  <div class = "col-xs-3">
<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>

  </tr>
  <% end %>
</tbody>
</table>
</div>






<div class = "col-xs-9">
<h1>NewBook</h1>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit '投稿' %>
 
<% end %>
</div>
</div>
</div>
