<p><%= flash[:notice] %></p>

<div class="container">
  <div class ="row">


<div class = "col-xs-3">
<h2>User info</h2>

    <%= @user.name %>
      <%= @user.introduction %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img" %>
    <% if @user == current_user.id %>
    <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% else %>
    <%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% end %>










<h1>Newbook</h1>

<%= form_for(@new) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>

<% end %>
</div>


<div class= "col-xs-9">
<h2>Book detail</h2>
<table class="table table-striped">
<thead>
<tr>
<td>
  <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg', fallback: "no_image.jpg",size: "50x50" %><br>
    <%= @user.name %>
  <% end %>
</td>

    
 <td><%= link_to @book.title, book_path %></td>
 <td><%= @book.body %></td>
 <td><% if @user == current_user %>
  <%= link_to "Edit", edit_book_path %><% end %></td>
  <td>
    <% if @user == current_user %>
    <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "Are you sure?" %>
      <% end %>

</td>
</tr>
</thead>
</table>
</div>
</div>
</div>
